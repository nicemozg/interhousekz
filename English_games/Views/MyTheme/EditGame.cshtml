@model English_games.ViewModels.AddGameViewModel

@{
    ViewBag.Title = "Редактирование игры";
    Layout = "_Layout";
}
<div class="form-group text-center m-2 mb-3">
    <h2>Редактирование игры @Model.Name</h2>
</div>

<form method="post" asp-action="EditGame">
    <input type="hidden" asp-for="Id" value="@Model.Id"/>
    
    <div class="form-group text-center m-2">
        <label asp-for="Game" class="game-label">Платформа:</label>
        <select id="Platform" asp-for="Game" class="game">
            <option value="Web">Web</option>
            <option value="IOS">IOS</option>
            <option value="Android">Android</option>
        </select>
    </div>
    
    <div class="form-group text-center m-2">
        <label asp-for="Name">Название игры:</label>
        <input type="text" asp-for="Name" class="game">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group text-center m-2">
        <label asp-for="LinkPathForGame">Ссылка на игру:</label>
        <input type="text" asp-for="LinkPathForGame" class="game">
        <span asp-validation-for="LinkPathForGame" class="text-danger"></span>
    </div>
    
    <div class="form-group text-center m-2">
        <label asp-for="DescriptionForGame" class="game-label">Описание игры:</label>
        <textarea type="text" asp-for="DescriptionForGame" class="game"></textarea>
        <span asp-validation-for="DescriptionForGame" class="text-danger"></span>
    </div>
    
    <div class="text-center m-2">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}