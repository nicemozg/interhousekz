@model English_games.ViewModels.AddBookViewModel

@{
    ViewBag.Title = "Редактирование книги";
    Layout = "_Layout";
}

<div class="form-group text-center m-2 mb-3">
    <h2>Редактирование книги @Model.Name</h2>
</div>

<form method="post" asp-action="EditBook">
    <input type="hidden" asp-for="Id" value="@Model.Id"/>
    <div class="form-group text-center m-2">
        <label asp-for="Name">Название книги:</label>
        <input type="text" asp-for="Name" class="game">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group text-center m-2">
        <label asp-for="LinkPathForBook">Ссылка на игру:</label>
        <input type="text" asp-for="LinkPathForBook" class="game">
        <span asp-validation-for="LinkPathForBook" class="text-danger"></span>
    </div>
    <div class="text-center m-2">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
