@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/adaptive.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/registerAdaptive.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/detailThemeAdaptive.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/myThemsAdaptive.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/wallet-adaptive.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/number-reset-password.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/English_games.styles.css" asp-append-version="true"/>
    <link rel="icon" href="~/images/Logo/inter_house.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/images/Logo/inter_house.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Bebas+Neue&family=Raleway
                :wght@400;600;700&family=Roboto+Condensed:wght@400;700&family=Roboto:ital,wght@0,400;0,700;1,
                400&family=Tilt+Warp&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="text-center logo-div">
                <a class="navbar-brand mx-auto" asp-area="" asp-controller="Main" asp-action="Index">
                    <img src="~/images/Logo/Logo_InterHouse.JPG" class="logo"/>
                </a>
            </div>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                @if (!User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item my-auto">
                            <a class="btn btn-outline-secondary btn-sm me-1 mt-2 navbar-btn" asp-area="" asp-controller="Main" asp-action="Index">
                                <i class="fas fa-home"></i>
                                Главная
                                <span class="badge badge-primary"></span>
                            </a>
                        </li>
                        <li class="nav-item my-auto">
                            <a class="btn btn-outline-secondary btn-sm me-1 mt-2 navbar-btn" asp-area="" asp-controller="MyTheme" asp-action="AnonimusIndex">
                                <i class="fas fa-pencil-alt"></i>
                                Темы
                            </a>
                        </li>
                        <li class="nav-item my-auto">
                            <a class="nav-link text-dark navbar-btn" asp-area="" asp-controller="Account" asp-action="Login">Вход</a>
                        </li>
                        <li class="nav-item my-auto">
                            <a class="nav-link text-dark navbar-btn" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a>
                        </li>
                        <li class="nav-item">
                            <div class="d-flex flex-row align-items-center"> <!-- d-flex делает дочерние элементы гибкими, flex-row выстраивает их в ряд, align-items-center выравнивает по центру по вертикали -->
                                <a class="nav-link text-dark me-2" href="https://instagram.com/interhouse_kz?igshid=MTk0NTkyODZkYg==">
                                    <img src="~/images/Logo/instagram-logo.png" class="instagram-logo-header"/>
                                </a>
                                <a class="nav-link text-dark" href="https://t.me/interhouse_kzz">
                                    <img src="~/images/Logo/640px-Telegram_Messenger.png" class="telegram-logo-header"/>
                                </a>
                            </div>
                        </li>
                    </ul>
                }
            </div>


            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item my-auto">
                            <a class="btn btn-outline-secondary btn-sm me-1 mt-2 navbar-btn" asp-area="" asp-controller="Main" asp-action="Index">
                                <i class="fas fa-home"></i>
                                Главная
                                <span class="badge badge-primary"></span>
                            </a>
                        </li>
                        <li class="nav-item my-auto">
                            <a class="btn btn-outline-secondary btn-sm me-1 mt-2 navbar-btn" asp-area="" asp-controller="MyTheme" asp-action="Index">
                                <i class="fas fa-pencil-alt"></i>
                                Темы
                            </a>
                        </li>
                        <li class="nav-item my-auto">
                            <a class="btn btn-outline-secondary btn-sm me-1 mt-2 navbar-btn" asp-area="" asp-controller="MyTheme" asp-action="MyPurchaseThems">
                                <i class="fas fa-folder"></i>
                                Мои Темы
                            </a>
                        </li>
                        @* @if (User.IsInRole("admin") || User.IsInRole("superAdmin") || User.IsInRole("user")) *@
                        @* { *@
                        <li class="nav-item my-auto">
                            <a class="btn btn-outline-secondary btn-sm me-1 mt-2 navbar-btn" asp-area="" asp-controller="Users" asp-action="Wallet">
                                <i class="fas fa-wallet"></i> Баланс
                                <span class="badge badge-primary"></span>
                            </a>
                        </li>
                        @* } *@

                        @if (User.IsInRole("admin") || User.IsInRole("superAdmin"))
                        {
                            <li class="nav-item my-auto">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyTheme" asp-action="AddTheme">Добавить тему</a>
                            </li>
                            <li class="nav-item my-auto">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">All Users</a>
                            </li>
                            <li class="nav-item my-auto">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyTheme" asp-action="PopularClickThems">Click</a>
                            </li>
                            <li class="nav-item my-auto">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyTheme" asp-action="PopularPurchaseThems">Purchase</a>
                            </li>
                        }
                        <li class="nav-item me-5 my-auto">
                            <form method="post" asp-action="Logout" asp-controller="Account">
                                <button class="btn btn-outline-secondary btn-sm mt-2 navbar-btn" type="submit">
                                    <i class="fas fa-sign-out-alt"></i> Выход
                                    <span class="badge badge-primary"></span>
                                </button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <div class="d-flex flex-row align-items-center"> <!-- d-flex делает дочерние элементы гибкими, flex-row выстраивает их в ряд, align-items-center выравнивает по центру по вертикали -->
                                <a class="nav-link text-dark me-2" href="https://instagram.com/interhouse_kz?igshid=MTk0NTkyODZkYg==">
                                    <img src="~/images/Logo/instagram-logo.png" class="instagram-logo-header"/>
                                </a>
                                <a class="nav-link text-dark" href="https://t.me/interhouse_kzz">
                                    <img src="~/images/Logo/640px-Telegram_Messenger.png" class="telegram-logo-header"/>
                                </a>
                            </div>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
</header>



<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; INTERNATIONAL HOUSE- <a asp-area="" asp-controller="Main" asp-action="Index">Главная</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>